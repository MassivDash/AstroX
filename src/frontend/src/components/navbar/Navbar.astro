---
import GithubIcon from '../../svgs/Github.astro'
import SpaceoutIcon from '../../svgs/Spaceout.astro'
import AstroIcon from '../../svgs/AstroIcon.astro'
import RustIcon from '../../svgs/RustIcon.astro'
---

<script>
  import { navigate } from 'astro:transitions/client'

  const homeLink = document.getElementById('home-link')
  const astro = document.getElementById('astro-link')

  const clearLinks = () => {
    const links = document.querySelectorAll('a')
    // The url has changed
    links.forEach((link) => link.parentElement?.classList.remove('active'))
    document.getElementById('homeIcon')?.classList.remove('active')
  }

  const findActiveLink = () => {
    const links = document.querySelectorAll('a')
    links.forEach((link) => {
      console.log(window, window.location.href, link.href)
      if (link.href === window.location.href) {
        link.parentElement?.classList.add('active')
      }
    })
  }

  homeLink?.addEventListener('click', (event) => {
    event.preventDefault()
    clearLinks()
    document.getElementById('homeIcon')?.classList.add('active')
    navigate('/')
  })

  astro?.addEventListener('click', (event) => {
    event.preventDefault()
    clearLinks()
    document
      .getElementById('astro-link')
      ?.parentElement?.classList.add('active')
    navigate('/astro')
  })

  const actix = document.getElementById('actix-link')

  actix?.addEventListener('click', (event) => {
    event.preventDefault()
    clearLinks()
    navigate('/actix')
    document
      .getElementById('actix-link')
      ?.parentElement?.classList.add('active')
  })

  findActiveLink()
</script>

<nav transition:persist>
  <div class='nav'>
    <ul>
      <li>
        <a id='home-link' href='/'>
          <div class='logo'>
            <p>astro <span id='homeIcon' class='navi-link'>X</span></p>
          </div></a
        >
      </li>
      <li class='navi-link'>
        <a id='astro-link' href='/astro'>
          <AstroIcon height={30} width={30} />
          <p>astro</p>
        </a>
      </li>
      <li class='navi-link'>
        <a id='actix-link' href='/actix'>
          <RustIcon height={28} width={28} /><p>actiX</p>
        </a>
      </li>
      <li class='navi-link'>
        <a
          title='github repo link'
          href='https://github.com/MassivDash/AstroX'
          target='_blank'
        >
          <GithubIcon height={28} width={28} />
          <p>Repository</p>
        </a>
      </li>
      <li class='navi-link'>
        <a
          title='spaceout.pl'
          class='add-top-margin'
          href='https://spaceout.pl'
          target='_blank'
        >
          <SpaceoutIcon height={35} width={35} />
          <p>Spaceout</p>
        </a>
      </li>
    </ul>
  </div>
</nav>

<style>
