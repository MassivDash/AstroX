    width: 80px;
    height: 80px;
    align-items: center;
    justify-content: center;
    background: linear-gradient(90deg, #f6f6f6, #eeeeee, #f4f4f4, #fefefe);
    border-radius: 45px;
    box-shadow: inset 0 0 4px 1px #35332d1f;
    transition: all 0.7s cubic-bezier(0, 1.5, 1, 1.5);
    p {
      position: absolute;
      margin: 10px auto;
      font-size: 0.6rem;
      opacity: 0;
      bottom: -40px;
      transition: all 0.7s ease-in-out;
    }

    &:hover {
      box-shadow: inset 0 0 0px 0px hsla(45, 8%, 19%, 0.122);
      color: #0a0909;
      transform: scale(1.1);
      p {
        display: block;
        opacity: 1;
        transition: all 0.7s ease-in-out;
      }

      a {
        color: #0a0909;
        transition: all 0.7s ease-in-out;
      }
    }
  }

  .active {
    box-shadow: inset 0 0 0px 0px hsla(45, 8%, 19%, 0.122);
    color: #0a0909;
    transform: scale(1.1);
    position: relative;
    p {
      display: block;
      opacity: 1;
      position: absolute;
      margin: 10px auto;
      font-size: 0.6rem;
      opacity: 1;
      bottom: -40px;
      transition: all 0.7s ease-in-out;
    }

    .logo > p {
      color: #0a0909;
      position: relative;
      font-size:;
      transition: all 0.7s ease-in-out;
    }

    a {
      color: #0a0909;
      transition: all 0.7s ease-in-out;
    }
  }
</style>
