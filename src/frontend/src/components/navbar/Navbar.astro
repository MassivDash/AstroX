---
import GithubIcon from './Github.astro'
import SpaceoutIcon from './Spaceout.astro'
---

<script>
  import { navigate } from 'astro:transitions/client'

  const homeLink = document.getElementById('home-link')
  const aboutLink = document.getElementById('astro-link')

  homeLink?.addEventListener('click', (event) => {
    event.preventDefault()
    navigate('/')
  })

  aboutLink?.addEventListener('click', (event) => {
    event.preventDefault()
    navigate('/hello')
  })
</script>

<nav transition:persist>
  <div>
    <p>astro <span>X</span></p>
  </div>
  <ul>
    <li><a id='home-link' href='/'>home</a></li>
    <li><a id='astro-link' href='/astro'>astro</a></li>
    <li><a id='actix-link' href='/actix'>actiX</a></li>
    <li>
      <a href='https://github.com/MassivDash/AstroX' target='_blank'>
        <GithubIcon width={24} height={24} /></a
      >
    </li>
    <li>
      <a class='add-top-margin' href='https://spaceout.pl' target='_blank'>
        <SpaceoutIcon width={35} height={35} /></a
      >
    </li>
  </ul>
</nav>

<style>
  nav {
    display: flex;
    justify-content: space-between;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 100;
    height: 50px;
    background: linear-gradient(90deg, #f6f6f6, #eeeeee, #f4f4f4, #fefefe);
  }

  div {
    padding-left: 1rem;
  }

  p {
    font-weight: 700;
    font-size: 1.2rem;
    line-height: 1;
    color: #333;

    span {
      color: #8b8b8b;
    }
  }

  ul {
    display: flex;
    list-style: none;
    padding-right: 1rem;
    align-items: center;
  }

  li {
    margin: 0 1rem;
    font-size: 1rem;
  }

  a {
    text-decoration: none;
    color: #8b8b8b;
    text-transform: capitalize;

    &:hover {
      color: #000;
    }

    &.add-top-margin {
      margin-top: 0.1rem;
      display: flex;
    }
  }
</style>
