---
interface Props {
  id: string
  href: string
  external?: boolean
}

const { id, href, external } = Astro.props
---

<script>
  class MenuItem extends HTMLElement {
    constructor() {
      super()
      const id = this.dataset.id || 'astro-link'
      const link = document.getElementById(id)
      const href = this.dataset.href || '/'

      document.addEventListener(
        'astro:page-load',
        () => {
          // This only runs once.
          if (window.location.pathname === href) {
            link?.parentElement?.classList.add('active')
          }
        },
        { once: true }
      )
    }
  }
  customElements.define('menu-item', MenuItem)
</script>

<menu-item data-id={id} data-href={href} data-external={external}>
  <li class='navi-link'>
    <a id={id} href={href} target={external ? '_blank' : '_self'}>
      <slot />
    </a>
  </li>
</menu-item>

<style>
  li {
    margin: 0 1rem;

    &:first-child {
      margin-right: 30px;
    }
  }

  a {
    text-decoration: none;
    color: #8b8b8b;
    text-transform: lowercase;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    font-size: smaller;
    transition: all 0.7s ease-in-out;
    &:hover {
      color: #0a0909;
    }
  }

  .navi-link {
    display: flex;
    position: relative;
    width: 80px;
    height: 80px;
    align-items: center;
    justify-content: center;
    background: linear-gradient(90deg, #f6f6f6, #eeeeee, #f4f4f4, #fefefe);
    border-radius: 45px;
    box-shadow: inset 0px 1px 2px 1px #1f1e1a69;
    transition: all 0.7s cubic-bezier(0, 1.5, 1, 1.5);

    /* Hide <p> visually but keep for screen readers */
    p {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
    }

    &:hover {
      color: #0a0909;
      box-shadow: inset 0px 0px 0px 0px #1f1e1a69;

      a {
        color: #0a0909;
        transition: all 0.7s ease-in-out;
      }

      &:active {
        box-shadow: inset 0px 1px 2px 3px #1f1e1a69;
      }
    }
  }

  .active {
    box-shadow: none;
    color: #0a0909;
    transform: scale(1);
    filter: drop-shadow(1px 1px 1px rgba(30, 21, 21, 3.47));
    background: linear-gradient(-90deg, #f6f6f6, #eeeeee, #f4f4f4, #fefefe);
    position: relative;
    transitions: all 0.7s ease-in-out;

    &:hover {
      filter: none;
    }

    &:active {
      box-shadow: inset 0px 1px 2px 3px #1f1e1a69;
    }

    .logo > p {
      color: #0a0909;
      display: flex;
      margin: auto;
      position: relative;
      font-size: 2rem;
      transition: all 0.7s ease-in-out;
    }

    a {
      color: #0a0909;
      transition: all 0.7s ease-in-out;
    }
  }
</style>
