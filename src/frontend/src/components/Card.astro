---
interface Props {
  title: string
  body: string
  href: string
  moreInfo?: string
}

const { href, title, body, moreInfo } = Astro.props
---

<li class='link-card'>
  <a href={href}>
    <div>
      <h2>
        {title}
      </h2>
      <p>
        {body}
      </p>
    </div>
    <div class='more-info'>
      <div class='slot-container'>
        <slot />
      </div>
      <span>{moreInfo}</span>
    </div>
  </a>
  <style>
    .link-card {
      list-style: none;
      display: flex;
      padding: 0px;
      margin-top: 20px;
      border-radius: 7px;
    }
    .link-card > a {
      width: 250px;
      height: 200px;
      text-decoration: none;
      line-height: 1.4;
      padding: calc(1.5rem - 1px);
      border-radius: 8px;
      color: white;
      opacity: 1;
      display: flex;
      justify-content: flex-start;
      transition: all 0.2s cubic-bezier(0.05, 0.7, 0.1, 1);
      background-color: #23262d;
      box-shadow: 0px 1px 2px 1px #1f1e1a69;

      span {
        opacity: 0;
        margin-top: 50px;
        transition: all 0.2s cubic-bezier(0.05, 0.7, 0.1, 1);
      }

      .more-info {
        display: flex;
        width: 10px;
        height: 100%;
        justify-content: flex-end;
        align-items: center;
        flex-direction: column;
        opacity: 0;
        text-align: right;
        transition: all 0.2s cubic-bezier(0.05, 0.7, 0.1, 1);
      }

      svg,
      .slot-container {
        opacity: 0;
        height: 100%;
        transition: all 0.2s cubic-bezier(0.05, 0.7, 0.1, 1);
      }

      &:hover {
        transition: all 0.5s cubic-bezier(0.3, 0, 0.8, 0.15);
        width: 400px;
        height: 200px;

        .more-info {
          display: flex;
          width: 100%;
          opacity: 1;
          height: 100%;
        }

        svg,
        .slot-container {
          opacity: 1;
          transition: all 0.5s cubic-bezier(0.3, 0, 0.8, 0.15) 0.5s;
        }

        span {
          visibility: visible;
          opacity: 1;
          transition: all 0.5s cubic-bezier(0.3, 0, 0.8, 0.15) 0.5s;
        }
      }
    }
    h2 {
      margin: 0;
      font-size: 1.25rem;
      transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    p {
      margin-top: 0.5rem;
      margin-bottom: 0;
      font-style: italic;
      font-size: 0.9rem;
      width: 100px;
    }
  </style>
</li>
