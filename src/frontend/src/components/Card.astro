---
interface Props {
  title: string
  body: string
  href: string
  moreInfo?: string
}

const { href, title, body, moreInfo } = Astro.props
---

<li class='link-card'>
  <a href={href}>
    <div>
      <h2>
        {title}
      </h2>
      <p>
        {body}
      </p>
    </div>
    <div class='more-info'>
      <span>{moreInfo}</span>
    </div>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    margin-top: 20px;
    border-radius: 7px;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 250px;
    height: 200px;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
    display: flex;
    justify-content: flex-start;
    transition: all 0.2s cubic-bezier(0.05, 0.7, 0.1, 1);

    span {
      opacity: 0;
    }

    .more-info {
      display: flex;
      width: 10px;
      height: 10px;
      justify-content: center;
      align-items: flex-end;
      opacity: 1;
      transition: all 0.2s cubic-bezier(0.05, 0.7, 0.1, 1);
    }

    &:hover {
      background-color: #5c3f3f;
      transition: all 0.5s cubic-bezier(0.3, 0, 0.8, 0.15);
      width: 400px;
      height: 200px;

      .more-info {
        display: flex;
        width: 100%;
        opacity: 1;
        height: 100%;
        transition: all 0.5s cubic-bezier(0.3, 0, 0.8, 0.15);
      }

      span {
        visibility: visible;
        opacity: 1;
      }
    }
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    font-style: italic;
  }
</style>
